.login-dir(ng-hide='auth.loggedIn() || auth.loading()')
  .login-form
    h1 Log in
    form(name='loginForm', novalidate, ng-submit='login()', ignore='true')
      input(type='email', name='email', ng-model='email', placeholder='Email address')
      span.error(ng-show='submitted && loginForm.email.$error.email') Please use a valid email address
      span.error(ng-show='submitted && emailerror') Please use a valid email address
      input(type='password', name='password', ng-model='password', placeholder='Password')
      small.error(ng-show='submitted && passworderror') A password is required
      div.controls
        .error {{message}}
        input.button(type='submit', value='Login')
